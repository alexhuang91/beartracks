%table#resident-form
  %caption#resident-form-caption= "Edit resident profile"
  = form_for @resident do |f|
    %tr
      %td.resident-form-header= f.label :first_name
      %td.resident-form-info= f.text_field :first_name
    %tr
      %td.resident-form-header= f.label :last_name
      %td.resident-form-info= f.text_field :last_name
    %tr
      %td.resident-form-header= f.label :unit
      %td.resident-form-info= f.select :unit, units_array
    %tr
      %td.resident-form-header= f.label :building
      %td.resident-form-info= f.text_field :building
    %tr
      %td.resident-form-header= f.label :room
      %td.resident-form-info= f.text_field :room
    %tr
      %td.resident-form-header= f.label :phone_number
      %td.resident-form-info= f.text_field :phone_number
    %tr
      %td.resident-form-header= f.label :email
      %td.resident-form-info= f.text_field :email
    %tr
      %td.resident-form-header= f.label :preference
      %td.resident-form-info= f.select :preference, preferences_array
    %tr
      %td.resident-form-header= f.label :login
      %td.resident-form-info= f.text_field :login
    %tr
      %td.resident-form-header= f.label :password
      %td.resident-form-info= f.password_field :password
    %tr
      %td.resident-form-header= f.label :password_confirmation
      %td.resident-form-info= f.password_field :password_confirmation
