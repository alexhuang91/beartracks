!!! 5
%html
  %head
    %title BearTracks
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #header
      %h1.title= link_to "BearTracks", root_url
      - if current_clerk
        #user_name
          = "Hello #{current_clerk.first_name} #{current_clerk.last_name}"
    
    - if current_resident
      #user_nav
        = link_to "My Profile", resident_path(current_resident)
        |
        = link_to "Resident Logout", resident_logout_path
    - elsif current_clerk
      #user_nav
        - if current_clerk.is_admin?
          = link_to "View Packages", packages_path
          |
          = link_to "View All Clerks", clerks_path
          |
          = link_to "Add New Clerk", new_clerk_path
        |
        = link_to "Edit Profile", edit_clerk_path(current_clerk)
        |
        = link_to "Clerk Logout", clerk_logout_path
    - else
      #user_nav
        = link_to "Clerk Login", clerk_login_path

    #flash
      - if flash[:notice]
        #notice
          %span.notice
            = flash[:notice]
      - elsif flash[:warning]
        #warning
          %span.warning
            = flash[:warning]
      - elsif flash[:error]
        #error
          %span.error
            = flash[:error]
    
    #wrapper
      = yield

