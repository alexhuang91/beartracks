!!! 5
%html
  %head
    %title BearTracks
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #header
      %h1.title BearTracks
    #notice
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]

    .wrapper
      = yield
      .push

    #footer
      .main
        #footimage
          = image_tag("campanile_shadow.png")
      .secondary
        %p (c) 2012 UC Berkeley CS169 Group 17. All Rights Reserved.
