%table#packages
  %caption#packages-table-caption
    = @table_caption
  -if @packages != []
    %thead
      %tr.packages-table-header
        %th= link_to 'Arrival Time', packages_path(:sort => 'datetime_received DESC')
        %th= link_to 'Package ID', packages_path(:sort => 'id ASC')
        %th.packages-table-cell Tracking Number
        %th= link_to 'Package Type', packages_path(:sort => 'package_type ASC')
        %th= link_to 'Resident Name', packages_path(:sort => 'resident_name ASC')
        -if @clerk.is_admin?
          %th= link_to 'Unit', packages_path(:sort => 'unit ASC')
        %th.packages-table-cell Building
        %th.packages-table-cell Room
        %th.packages-table-cell More Info
        %th.packages-table-cell-pickup 
    %tbody
      - @packages.each do |p|
        -if p.picked_up and @viewing_all
          %tr.packages-table-info-picked
            %td.packages-table-cell= p.datetime_received.localtime.strftime("%m/%d/%y %I:%M%p")
            %td.packages-table-cell= p.id
            %td.packages-table-cell= p.tracking_number
            %td.packages-table-cell= p.package_type
            %td.packages-table-cell= p.resident_name
            -if @clerk.is_admin?
              %td.packages-table-cell= p.unit
            %td.packages-table-cell= p.building
            %td.packages-table-cell= p.room
            %td.packages-table-cell-details=link_to "view details", package_path(p)
            %td.packages-table-cell-pickup=link_to "_", :action => 'toggle_pickup', :id => p.id
        -else
          %tr.packages-table-info
            %td.packages-table-cell= p.datetime_received.localtime.strftime("%m/%d/%y %I:%M%p")
            %td.packages-table-cell= p.id
            %td.packages-table-cell= p.tracking_number
            %td.packages-table-cell= p.package_type
            %td.packages-table-cell= p.resident_name
            -if @clerk.is_admin?
              %td.packages-table-cell= p.unit
            %td.packages-table-cell= p.building
            %td.packages-table-cell= p.room
            %td.packages-table-cell-details=link_to "view details", package_path(p)
            %td.packages-table-cell-pickup=link_to "_", :action => 'toggle_pickup', :id => p.id
