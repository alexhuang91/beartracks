%h2 Details about Package #{@package.tracking_number}

%table#details
  %tr
    %td Resident:
    %td= @package.resident_name
  %tr
    %td Housing:
    %td= @package.unit + ', ' + @package.room.to_s + ' ' + @package.building
  %tr
    %td From:
    %td= @package.sender_address
  %tr
    %td
    %td= @package.sender_city + ', ' + @package.sender_state + ' ' + @package.sender_zip.to_s
  %tr
    %td Carrier:
    %td= @package.carrier
  %tr
    %td Arrived:
    %td= @package.datetime_received.localtime.strftime("%m/%d/%y %I:%M%p")

  %tr
    %td Received By:
    %td= @clerk_received.login

  %tr
    %td Picked Up?:
    %td= @package.picked_up ? "Yes" : "No"

  -if @accepted
    %tr
      %td Picked Up At:
      %td= @package.datetime_accepted.localtime.strftime("%m/%d/%y %I:%M%p")
    %tr
      %td Released By:
      %td= @clerk_released.login

-if @package.description and @package.description != ""
  %h3 Additional Comments:

  %p#description= @package.description
-else
  %p#description= '(no additional comments)'

= link_to 'Edit', edit_package_path(@package)
-if not @package.picked_up
  = link_to 'Picked Up', :action => 'picked_up', :id => @package.id
= button_to 'Delete', package_path(@package), :method => :delete, :confirm => 'Are you sure?'

= link_to 'Back to package list', packages_path
