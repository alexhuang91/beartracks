#package-view-options
  =form_tag packages_path, :method=>'get' do
    View:
    = select_tag :packages, options_for_select(@packages_hash, params[:packages])
    -#Unit:
    -#= select_tag :unit, options_for_select(@units_hash, params[:unit])
    = submit_tag 'Reload Packages'

-if @packages == []
  (No packages to list)
  %br
-else
  %table#packages
    %caption#package-table-caption All Packages
    %thead
      %tr.packages-table-header
        %th.packages-table-cell Arrival Time
        %th.packages-table-cell Package ID
        %th.packages-table-cell Tracking Number
        %th.packages-table-cell Resident Name
        %th.packages-table-cell Unit
        %th.packages-table-cell Building
        %th.packages-table-cell Room
        %th.packages-table-cell More Info
    %tbody
      - @packages.each do |p|
        %tr.packages-table-info
          %td.packages-table-cell= p.datetime_received.localtime.strftime("%m/%d/%y %I:%M%p")
          %td.packages-table-cell= p.id
          %td.packages-table-cell= p.tracking_number
          %td.packages-table-cell= p.resident_name
          %td.packages-table-cell= p.unit
          %td.packages-table-cell= p.building
          %td.packages-table-cell= p.room
          %td.packages-table-cell=link_to "view details", package_path(p)

#packages-table-options
  = link_to "Add New Package", new_package_path
